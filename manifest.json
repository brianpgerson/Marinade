{
  "manifest_version": 2,
  "name": "Marinade Weird version",
  "description": "This extension makes your bookmarks better.",
  "version": "0.0.1",
  "content_scripts": [
    {
      "js": ["content.js", "jquery.js", "jquery-ui.js"],
      "matches": ["http://*/*", "https://*/*"],
      "css": ["modal.css"]
    }
  ],
  "background": {
    "scripts": ["controller.js", "view.js", "model.js", "init.js"],
    "persistent": true
    },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "permissions": [
    "tabs",
    "bookmarks",
    "https://ajax.googleapis.com/",
    "http://*/*", 
    "https://*/*"
  ]
}